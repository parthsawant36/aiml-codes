/* Secure version: bounded input with fgets */ 
#include <stdio.h> 
#include <string.h> 
int main(void) { 
    char buf[16]; 
    printf("Enter text (max 15 chars): "); 
    if (fgets(buf, sizeof(buf), stdin) == NULL) return 1; 
      /* remove newline if present */ 
    buf[strcspn(buf, "\n")] = '\0'; 
    printf("You typed: %s\n", buf); 
    return 0; 
}
