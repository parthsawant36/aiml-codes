#include <stdio.h> 
int main() { 
    char text[100]; 
    int key; 
    printf("Enter text: "); 
    scanf("%[^\n]", text);   // read string with spaces 
    printf("Enter key: "); 
    scanf("%d", &key); 
 
    for (int i = 0; text[i] != '\0'; i++) { 
        char ch = text[i]; 
        if (ch >= 'A' && ch <= 'Z') 
            text[i] = (ch - 'A' + key) % 26 + 'A'; 
        else if (ch >= 'a' && ch <= 'z') 
            text[i] = (ch - 'a' + key) % 26 + 'a'; 
    } 
    printf("Encrypted text: %s\n", text); 
    return 0; 
}
